@using GridMvc.Html
@model IEnumerable<RaiseTicket.Models.Ticket>

@{
    ViewBag.Title = "GridView";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>   

    <title>Ticket List</title>
</head>
<body>
    <h2>@RaiseTicket.Resources.TicketList.TitleTicketList</h2>
    <hr />
    <div style="width:1200px;">
        @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.Project.ProjectName).Titled(RaiseTicket.Resources.TicketList.Project).SetWidth(100);
                        columns.Add(c => c.Department.DeptName).Titled(RaiseTicket.Resources.TicketList.Department).SetWidth(400);
                        columns.Add(c => c.Employee.EmpName).Titled(RaiseTicket.Resources.TicketList.Requester).SetWidth(100);
                        columns.Add(c => c.Description).Titled(RaiseTicket.Resources.TicketList.Description).SetWidth(400);
                        columns.Add(c => c.Received).Titled(RaiseTicket.Resources.TicketList.ReceivedOn).SetWidth(100);
                    }).WithPaging(4).Sortable(true).Filterable(true).WithMultipleFilters()
    </div>
</body>
</html>

